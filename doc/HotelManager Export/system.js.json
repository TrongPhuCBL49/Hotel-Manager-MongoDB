{ 
    "_id" : "loaiPhong", 
    "value" : function (tenPhong) {
    var phong = db.Phong.findOne({
      Ten:tenPhong
    });
    var idLoaiPhong = phong.LoaiPhong;
    var tenLoaiPhong = db.LoaiPhong.findOne({
      _id:idLoaiPhong
    });
    return tenLoaiPhong.Ten;}
}
{ 
    "_id" : "idLoaiPhong", 
    "value" : function (tenLoaiPhong) {
